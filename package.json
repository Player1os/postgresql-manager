{
  "name": "postgresql-manager",
  "version": "1.0.0",
  "description": "A small application that can run regular backups and on-demand restorations",
  "engines": {
    "node": "~8.1.4",
    "npm": "~5.3.0"
  },
  "scripts": {
    "preversion": "npm run validate && git checkout . && git checkout master && git pull",
    "postversion": "git push && git push --tags",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf build/*",
    "execute": "ts-node -r @player1os/bluebird-global -r module-alias/register",
    "lint": "tslint {./,src/**/,test/**/}*.ts --type-check --project ./tsconfig.json",
    "lint:watch": "chokidar ./**/*.ts src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "start": "node build/index.js",
    "start:background": "pm2 startOrRestart pm2.json",
    "start:watch": "nodemon build/index.js -w build/index.js",
    "backup": "npm run execute -- src/backup.ts",
    "restore": "npm run execute -- src/restore.ts",
    "test": "npm run execute -- test/index.ts",
    "test:coverage": "nyc npm test",
    "test:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm test\" --initial --silent",
    "validate": "npm run clean && npm run lint && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/postgresql-manager.git"
  },
  "keywords": [
    "postgresql",
    "backup"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Player1os/postgresql-manager/issues"
  },
  "homepage": "https://github.com/Player1os/postgresql-manager#readme",
  "dependencies": {
    "@player1os/config": "^1.0.3",
    "@player1os/data-type-utility": "^1.0.9",
    "bluebird": "^3.5.0",
    "cron": "^1.2.1",
    "express": "^4.15.3",
    "http-status": "^1.0.1",
    "source-map-support": "^0.4.15",
    "spawn-process-promise": "^1.0.6"
  },
  "devDependencies": {
    "@player1os/bluebird-global": "^1.0.0",
    "@player1os/tslint-config": "^1.3.1",
    "@types/bluebird-global": "^3.5.2",
    "@types/chai": "^3.5.2",
    "@types/cron": "^1.2.1",
    "@types/express": "^4.0.36",
    "@types/http-status": "^0.2.29",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/webpack": "^2.2.15",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "bluebird": "^3.5.0",
    "chai": "^3.5.0",
    "chokidar": "^1.7.0",
    "cpr": "^2.1.0",
    "mocha": "^3.4.1",
    "module-alias": "^2.0.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.1",
    "recursive-readdir-sync": "^1.0.6",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tsutils": "1.6.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  },
  "_moduleAliases": {
    "...": "."
  }
}
